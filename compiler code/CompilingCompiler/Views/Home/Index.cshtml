
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<script>
    function ClearFields() {
        document.getElementById("result").value = "";
    }</script>
<body>
    <div class="contain">
        <div class="input">
            <h2>Input</h2>
            @using (Html.BeginForm("UploadFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data", data_ajax = "false" }))
            {
                <label for="gib"></label>
                <textarea id="gib" name="gib" rows="25" cols="50"></textarea>
                <br />
                <button type="submit" formaction="~/Home/Scan" ">Scan</button>
                <button type="submit" formaction="~/Home/Function2">Parse</button>


                <div>
                    @Html.TextBox("file", "", new { type = "file" }) <br />
                    <input type="submit" value="Upload" />
                    @ViewBag.Message
                </div>


            }

        </div>
        <div class="result" id="result">
            <h2>Result</h2>
            <p>
                @for (int i = 0; i < TempData.Count; i++)
                {
                    @TempData[i.ToString()]
                    <br />
                }
            </p>
        </div>
    </div>

</body>

</html>
<br />

